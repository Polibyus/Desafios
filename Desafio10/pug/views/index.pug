html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='Formulario de carga'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body
        div(class='d-flex align-items-center flex-column')
            h1(class="text-center my-4")='Bienvenido a Shop of Roll'
            div(class='card mb-4' style="width: 50rem;")
                div(class='card-body')
                    h2(class='card-title')='Ingresar nuevo producto'
                    form(action='/form' method='post')
                        div(class="mb-3")
                            label(for="" class="form-label")='Nombre del producto'
                            input(type='text' class="form-control" name="title" aria-describedby="Producto" required)
                        div(class="mb-3")
                            label(for="" class="form-label")='Precio en u$d'
                            input(type='number' class="form-control" name="price" aria-describedby="Precio" required)
                        button(type="submit" class="btn btn-primary")='Subir'
            a(href='/productos' class="btn btn-primary") Ver listado 
            