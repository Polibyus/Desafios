html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='Formulario de carga'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet", href="style.css")
    body
        div(class='d-flex align-items-center flex-column')
            h1(class="text-center")='Listado de productos'
            table(class='table table-dark table-hover' style="width: 50%;")
                thead(align="center")
                    tr
                        th='ID'
                        th='Nombre'
                        th='Precio'
                        th='Imagen'
                        th='Detalle'
                tbody(align="center")
                    each p in products
                        tr
                            td=p.id
                            td=p.title
                            td=p.price
                            td
                                img(src=p.pic, alt="Img Product", width="50px", height="50px")
                            td
                                a(href=`/api/products/${p.id}` class="btn btn-primary")='Detalle'
                            //- td
                                //- a(data-confirm="Are you sure?" data-method="delete" rel="nofollow" href=`/api/products/delete/${p.id}` class="btn btn-primary")='Eliminar'
        hr
        a(href=`/` class="btn btn-primary")='Formulario'     

    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")
    script(src="/socket.io/socket.io.js")
    script(src="main.js") 
            