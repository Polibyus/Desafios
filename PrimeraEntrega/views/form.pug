html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title='Formulario de carga'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet", href="style.css")
    body
        div(class='d-flex align-items-center flex-column')
            h1(class="text-center my-4")='Bienvenido a Shop of Roll'
            div(class='card mb-4')
                div(class='card-body')
                    h2(class='card-title')='Ingresar nuevo producto'
                    form(action='/form' method='post')
                        div(class="mb-3")
                            label(for="" class="form-label")='Nombre del producto'
                            input(type='text' class="form-control" name="title" aria-describedby="Producto" required)
                        div(class="mb-3")
                            label(for="" class="form-label")='Descripcion'
                            input(type='text' class="form-control" name="desc" aria-describedby="Descripcion" required)
                        div(class="mb-3")
                            label(for="" class="form-label")='Codigo'
                            input(type='number' class="form-control" name="code" aria-describedby="Codigo" required)
                        div(class="mb-3")
                            label(for="" class="form-label")='Link a la imagen'
                            input(type='text' class="form-control" name="pic" aria-describedby="Imagen")
                        div(class="mb-3")
                            label(for="" class="form-label")='Precio en u$d'
                            input(type='number' class="form-control" name="price" aria-describedby="Precio" required)
                        div(class="mb-3")
                            label(for="" class="form-label")='Stock'
                            input(type='number' class="form-control" name="stock" aria-describedby="Stock" required)
                        button(type="submit" class="btn btn-primary")='Subir'
            hr
            a(href=`/api/products` class="btn btn-primary")='Ver productos'

    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")
    script(src="/socket.io/socket.io.js")
    script(src="main.js") 